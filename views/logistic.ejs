<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Wool Corporation Logistic Support</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
        }
        header {
            background-color: #333;
            color: #fff;
            text-align: center;
            padding: 10px 0;
        }
        .container {
            max-width: 800px;
            margin: 0 auto;
            padding: 20px;
        }
        .section {
            margin-bottom: 30px;
        }
        .contact-form {
            background-color: #f5f5f5;
            padding: 20px;
        }
        form {
            display: flex;
            flex-wrap: wrap;
        }
        label, input, textarea, button {
            width: 100%;
            margin-bottom: 10px;
        }
        button {
            background-color: #333;
            color: #fff;
            border: none;
            padding: 10px;
            cursor: pointer;
        }
        .chat-widget {
            background-color: #fff;
            box-shadow: 0px 0px 5px rgba(0, 0, 0, 0.2);
            position: fixed;
            bottom: 20px;
            right: 20px;
            display: none;
        }
        .chat-header {
            background-color: #333;
            color: #fff;
            padding: 10px;
            cursor: pointer;
        }
        .chat-content {
            padding: 10px;
        }
    </style>
</head>
<body>
    <header>
        <h1>Wool Corporation Logistic Support</h1>
    </header>
    <div class="container">
        <div class="section">
            <h2>Contact Information</h2>
            <p>
                Wool Corporation<br>
                Address: 123 Main St, City<br>
                Phone: (123) 456-7890<br>
                Email: info@woolcorp.com<br>
            </p>
        </div>
        <div class="section">
            <h2>Support Request Form</h2>
            <div class="contact-form">
                <form>
                    <label for="name">Name:</label>
                    <input type="text" id="name" name="name" required>

                    <label for="email">Email:</label>
                    <input type="email" id="email" name="email" required>

                    <label for="message">Message:</label>
                    <textarea id="message" name="message" rows="4" required></textarea>

                    <button type="submit">Submit</button>
                </form>
            </div>
        </div>
    </div>
    
    <!-- Chat Widget -->
    <div class="chat-widget">
        <div class="chat-header">
            Chat Support
        </div>
        <div class="chat-content">
            <p>Welcome to our chat support. How can we assist you today?</p>
            <!-- Chat messages can be added dynamically using JavaScript -->
        </div>
    </div>

    <script>
        // JavaScript to show/hide the chat widget
        const chatWidget = document.querySelector('.chat-widget');
        const chatHeader = document.querySelector('.chat-header');

        chatHeader.addEventListener('click', () => {
            chatWidget.classList.toggle('open');
        });
    </script>
</body>
</html>
